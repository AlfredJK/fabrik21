<?xml version="1.0" encoding="utf-8"?>
<form>
	<name>Form Edit Form</name>
	<params addpath="/administrator/components/com_fabrik/elements">
		<param name="state" type="radio" default="0" label="Published">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="created_by" type="author" default="" label="AUTHOR" description="AUTHORDESC" />
		<param name="created_by_alias" type="text" size="20" default="" label="AUTHOR ALIAS" description="AUTHOR ALIASDESC" />
		<param name="created" type="calendar" default="" label="CREATE DATE" />
		<param name="publish_up" type="calendar" default="" label="START PUBLISHING"  />
		<param name="publish_down" type="calendar" default="" label="FINISH PUBLSHING" />
	</params>
	
	<params group="buttons">
		<param name="reset_button" type="radio" default="0" label="RESETBUTTON">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="reset_button_label" type="text" default="Reset" label="RESETBUTTONLABEL" description="RESETBUTTONLABELDESC" />
		<param name="copy_button" type="radio" default="0" label="COPYBUTTON" description="COPYBUTTONDESC">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="copy_button_label" type="text" default="Save as a copy" label="COPYBUTTONLABEL" description="COPYBUTTONLABELDESC" />
		<param name="goback_button" type="radio" default="0" label="GO BACK BUTTON" description="">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="goback_button_label" type="text" default="Go back" label="GO BACK BUTTON LABEL" description="" />
		
		<param name="apply_button" type="radio" default="0" label="APPLYBUTTON" description="APPLYBUTTONDESC">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="apply_button_label" type="text" default="Apply" label="APPLYBUTTONLABEL" description="APPLYBUTTONLABELDESC" />
		<param name="delete_button" type="radio" default="0" label="DELETEBUTTON" description="DELETEBUTTONDESC">
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="delete_button_label" type="text" default="Delete" label="DELETEBUTTONLABEL" description="DELETEBUTTONLABELDESC" />
		
	</params>
	
	<params group="templates">
			<param name="pdf_template" type="folderlist" directory="components/com_fabrik/views/form/tmpl" hide_none="0" hide_default="1"  default="admin" label="PDF TEMPLATE" description="IF NONE SELECTED THEN THE MAIN TEMPLATE WILL BE USED" />
	</params>
	
	<params group="options">
		<param name="pdf" type="list" default="" label="PDFICON" description="PDFICONDESC">
			<option value="">Use Global</option>
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="print" type="list" default="" label="PRINTICON" description="PRINTICONDESC">
			<option value="">Use Global</option>
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="email" type="list" default="" label="EMAILICON" description="EMAILICONDESC">
			<option value="">Use Global</option>
			<option value="0">Hide</option>
			<option value="1">Show</option>
		</param>
		<param name="show-title" type="radio" default="1" label="SHOWTITLE" description="SHOWTITLEDESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="show-title-in-detail-view" type="radio" default="1" label="SHOWTITLEINDETAILVIEW" description="SHOWTITLEINDETAILVIEWDESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="show-referring-table-releated-data" type="radio" default="0" label="SHOWRELATEDTABLELINKS" description="SHOWRELATEDTABLELINKSDESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="process-jplugins" type="list" default="2" label="PROCESSJPLUGINS" description="PROCESSJPLUGINSDESC">
			<option value="0">No</option>
			<option value="1">details &amp; form view</option>
			<option value="2">details view only</option>
		</param>
	</params>
	
	<params group="cck">
		<param name="cck_category" type="category" label="CATEGORY" description="CCKCATEGORYDESCRIPTION" />
	</params>
	
	<params group="notes">
		<param type="textarea" rows="3" cols="55" name="note" label="NOTE" descripton="NOTEDESC" />
	</params>
	
	<params group="groups">
		<param name="randomise_groups" type="radio" default="0" label="RANDOMISEGROUPS" description="RANDOMISEGROUPSDESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
	
	<params group="processing">
		<param name="ajax_validations" type="radio" default="0" label="AJAXVALIDATIONS" description="AJAXVALIDATIONSDESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="submit-success-msg" type="text" size="95" default="" label="SUBMITSUCCESSMSG" description="SUBMITSUCCESSMSGDESC" />
		<param name="spoof_check" type="radio" default="1" label="SPOOFCHECK" description="SPOOFCHECKDESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="multipage_save" type="list" default="1" label="SPLITPAGESAVE" description="SPLITPAGESAVEDESC">
			<option value="0">No</option>
			<option value="1">Only logged in users</option>
			<option value="2">Everyone</option>
		</param>
	</params>

</form>
