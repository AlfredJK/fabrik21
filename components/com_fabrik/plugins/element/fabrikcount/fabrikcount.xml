<?xml version="1.0" encoding="UTF-8"?>
<install version="1.5" type="fabrikplugin" group="element" method="upgrade">
	<name>count</name>
	<author>Rob Clayburn</author>
	<creationDate>May 2010</creationDate>
	<copyright>(C) 2005-2010 fabrikar.com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>rob@pollen-8.co.uk</authorEmail>
	<authorUrl>www.fabrikar.com</authorUrl>
	<version>2.1</version>
	<description>Counts records in a row - so adds "COUNT(x) .... GROUP BY (y)" to the main db query</description>
	<files>
		<filename fabrikplugin="fabrikcount">fabrikcount.php</filename>
		<filename>index.html</filename>
		<filename>javascript.js</filename>
	</files>
	<languages folder="administrator/language" >
		<language tag="en-GB">en-GB/en-GB.com_fabrik.plg.element.fabrikcount.ini</language>
                <language tag="fr-FR">fr-FR/fr-FR.com_fabrik.plg.element.fabrikcount.ini</language>
	</languages>
	<params addpath="/administrator/components/com_fabrik/elements">
	</params>
	<params group="extra">
		<param name="count_field" type="tablefields" valueformat="tableelement" default="" label="COUNTFIELD" description="COUNTFIELDDESC" />
		<param name="count_groupbyfield" type="tablefields" valueformat="tableelement" default="" label="COUNTGROUPBYFIELD" description="COUNTGROUPBYFIELDDESC" />
	</params>		
</install>