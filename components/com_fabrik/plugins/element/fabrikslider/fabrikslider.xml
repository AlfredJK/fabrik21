<?xml version="1.0" encoding="UTF-8"?>
<install version="1.5" type="fabrikplugin" group="element" method="upgrade">
	<name>Slider</name>
	<author>Rob Clayburn</author>
	<creationDate>Jan 2010</creationDate>
	<copyright>(C) 2005-2010 fabrikar.com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>rob@pollen-8.co.uk</authorEmail>
	<authorUrl>www.fabrikar.com</authorUrl>
	<version>2.1</version>
	<description>Renders Mootools Slider</description>
	<files>
		<filename fabrikplugin="fabrikslider">fabrikslider.php</filename>
		<filename>index.html</filename>
		<filename>javascript.js</filename>
		<folder>images</folder>
	</files>
	<languages folder="administrator/language" >
		<language tag="en-GB">en-GB/en-GB.com_fabrik.plg.element.fabrikslider.ini</language>
	</languages>
	<params addpath="/administrator/components/com_fabrik/elements">
		<param name="width" type="width" default="250" label="WIDTH" description="" />
	</params>
	<params group="extra">
		<param name="slider-steps" type="text" default="100" label="SLIDERSTEPS" description="SLIDERSTEPSDESC" />
		<param name="slider-labels" size="30" type="text" default="" label="SLIDERLABELS" description="SLIDERLABELSDESC" />
		<param name="slider-shownone" type="radio" default="0" label="SHOWNONE" description="SHOWNONEDESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>