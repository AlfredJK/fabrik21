<?xml version="1.0" encoding="UTF-8"?>
<install version="1.5" type="fabrikplugin" group="element" method="upgrade">
	<name>password</name>
	<author>Rob Clayburn</author>
	<creationDate>Dec 2006</creationDate>
	<copyright>(C) 2005-2006 fabrikar.com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>rob@pollen-8.co.uk</authorEmail>
	<authorUrl>www.fabrikar.com</authorUrl>
	<version>2.1</version>
	<description>Renders password field</description>
	
	<languages folder="language" >
		<language tag="de-DE">de-DE/de-DE.com_fabrik.plg.element.fabrikpassword.ini</language>
		<language tag="en-GB">en-GB/en-GB.com_fabrik.plg.element.fabrikpassword.ini</language>
		<language tag="es-ES">es-ES/es-ES.com_fabrik.plg.element.fabrikpassword.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.com_fabrik.plg.element.fabrikpassword.ini</language>
		<language tag="it-IT">it-IT/it-IT.com_fabrik.plg.element.fabrikpassword.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.com_fabrik.plg.element.fabrikpassword.ini</language>
	</languages>
	
	<files>
		<filename fabrikplugin="fabrikpassword">fabrikpassword.php</filename>
		<filename>javascript.js</filename>
		<filename>index.html</filename>
	</files>
	<params>
		<param name="maxlength" type="text" size="3" default="255" label="MAXLENGTH" description=""/>
		<param name="sizefield" type="text" size="3" default="40" label="SIZEPASSFIELD" description="SIZEPASSFIELDDESC"/>
		<param name="password_allow_empty" 
			type="radio" 
			default="0" 
			label="PLG_ELEMENT_PASSWORD_ALLOW_EMPTY_LABEL"
			description="PLG_ELEMENT_PASSWORD_ALLOW_EMPTY_DESC">
				<option value="0">No</option>
				<option value="1">Yes</option>	
		</param>
	</params>
</install>