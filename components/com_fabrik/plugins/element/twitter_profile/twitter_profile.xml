<?xml version="1.0" encoding="UTF-8"?>
<install version="1.5" type="fabrikplugin" group="element" method="upgrade">
	<name>twitter profile</name>
	<author>Rob Clayburn</author>
	<creationDate>Dec 2006</creationDate>
	<copyright>(C) 2005-2010 fabrikar.com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>rob@pollen-8.co.uk</authorEmail>
	<authorUrl>www.fabrikar.com</authorUrl>
	<version>2.1</version>
	<description>Renders Twiter User Info</description>
	<files>
		<filename fabrikplugin="twitter_profile">twitter_profile.php</filename>
		<filename>index.html</filename>
		<filename>javascript.js</filename>
	</files>
	<languages folder="administrator/language" >
		<language tag="en-GB">en-GB/en-GB.com_fabrik.plg.element.twitter_profile.ini</language>
                <language tag="fr-FR">fr-FR/fr-FR.com_fabrik.plg.element.twitter_profile.ini</language>
	</languages>
	<params addpath="/administrator/components/com_fabrik/elements">
		<param name="width" type="width" label="Width"/>
		<param name="hidden" type="hidden" default="" size="3" label="HIDDEN" />
		<param name="eval" type="eval" default="0" label="Eval" />
		<param name="default" type="default" default="" label="Default" />
	</params>
	<params group="extra">
		<param name="twitter_profile_template" type="textarea" rows="3" cols="60" label="PROFILE_TEMPLATE" description="PROFILE_TEMPLATE_DESC" />
	</params>		
</install>