<?xml version="1.0" encoding="UTF-8"?>
<install version="1.5" type="fabrikplugin" group="element" method="upgrade">
	<name>Facebook comment</name>
	<author>Rob Clayburn</author>
	<creationDate>April 2010</creationDate>
	<copyright>(C) 2005-2010 fabrikar.com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>rob@pollen-8.co.uk</authorEmail>
	<authorUrl>www.fabrikar.com</authorUrl>
	<version>2.1</version>
	<description>Renders Facebook Comment widget</description>
	<files>
		<filename fabrikplugin="fbcomment">fbcomment.php</filename>
		<filename>index.html</filename>
		<filename>javascript.js</filename>
	</files>
	
	<administration>
		<languages folder="administrator/language" >
			<language tag="en-GB">en-GB/en-GB.com_fabrik.plg.element.fbcomment.ini</language>
			<language tag="fr-FR">fr-FR/fr-FR.com_fabrik.plg.element.fbcomment.ini</language>
		</languages>
	</administration>
	
	<params group="extra">
		
		<param name="fbcomment_opengraph_applicationid" type="text" label="APPLICATIONID" description="APPLICATIONIDDESC" />
		
		<param name="fbcomment_href" 
			type="text" 
			label="PLG_ELEMENT_FBCOMMENT_HREF_LABEL"
			description="PLG_ELEMENT_FBCOMMENT_HREF_DESC" />
			
		<param name="fbcomment_width" type="text" size="3" default="300" label="WIDTH" />
		<param name="fbcomment_number_of_comments" type="text" default="10" label="FBCOMMENTNUMBEROFCOMMENTS" />
		
		<param name="fbcomment_locale"
			default="en_US"
			size="5"
			type="text"
			label="PLG_ELEMENT_FBCOMMENT_LOCALE_LABEL"
			description="PLG_ELEMENT_FBCOMMENT_LOCALE_DESC" />
	</params>		
</install>