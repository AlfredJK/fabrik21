<?xml version="1.0" encoding="UTF-8"?>
<install version="1.5" type="fabrikplugin" group="element" method="upgrade">
	<name>IP address</name>
	<author>Hugh Messenger</author>
	<creationDate>May 2009</creationDate>
	<copyright>(C) 2005-2009 fabrikar.com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>hugh.messenger@gmail.com</authorEmail>
	<authorUrl>www.fabrikar.com</authorUrl>
	<version>2.1</version>
	<description>Stores the submitting client IP</description>
	<files>
		<filename fabrikplugin="fabrikip">fabrikip.php</filename>
		<filename>index.html</filename>
	</files>
	
	<params addpath="/administrator/components/com_fabrik/elements">
		<param name="hidden" type="hidden" default="" size="3" label="HIDDEN" />
	</params>
	<params group="extra">
		<param name="ip_update_on_edit" type="radio" default="0" label="Update on edit" description="UPDATEONEDITDESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>