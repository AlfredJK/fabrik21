<?xml version="1.0" encoding="UTF-8"?>
<install version="1.5" type="fabrikplugin" group="element" method="upgrade">
	<name>timer</name>
	<author>Rob Clayburn</author>
	<creationDate>Dec 2006</creationDate>
	<copyright>(C) 2005-2008 fabrikar.com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>rob@pollen-8.co.uk</authorEmail>
	<authorUrl>www.fabrikar.com</authorUrl>
	<version>2.1</version>
	<description>Renders Timer</description>
	<files>
		<filename fabrikplugin="fabriktimer">fabriktimer.php</filename>
		<filename>javascript.js</filename>
		<filename>index.html</filename>
	</files>
	
	<languages folder="language" >
			<language tag="de-DE">de-DE/de-DE.com_fabrik.plg.element.fabriktimer.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_fabrik.plg.element.fabriktimer.ini</language>
			<language tag="es-ES">es-ES/es-ES.com_fabrik.plg.element.fabriktimer.ini</language>
			<language tag="it-IT">it-IT/it-IT.com_fabrik.plg.element.fabriktimer.ini</language>
		</languages>
	
	<administration>
		<languages folder="administrator/language" >
			<language tag="de-DE">de-DE/de-DE.com_fabrik.plg.element.fabriktimer.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_fabrik.plg.element.fabriktimer.ini</language>
			<language tag="es-ES">es-ES/es-ES.com_fabrik.plg.element.fabriktimer.ini</language>
			<language tag="fr-FR">fr-FR/fr-FR.com_fabrik.plg.element.fabriktimer.ini</language>
			<language tag="it-IT">it-IT/it-IT.com_fabrik.plg.element.fabriktimer.ini</language>
		</languages>
	</administration>
	
	<params addpath="/administrator/components/com_fabrik/elements">
		<param name="hidden" type="hidden" default="" size="3" label="HIDDEN" />
		<param name="width" type="width" label="Width"/>
		<param name="default" type="default" default="" label="Default" />
	</params>
	<params group="extra">
		<param name="timer_disable" type="radio" default="0" label="DISABLEELEMENT" description="DISABLEELEMENTDESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="timer_autostart" type="radio" default="0" label="AUTOSTART" description="AUTOSTARTDESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="timer_readonly" type="radio" default="0" label="READONLY" description="READONLYDESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>		
</install>