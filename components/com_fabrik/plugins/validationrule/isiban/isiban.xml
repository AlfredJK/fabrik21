<?xml version="1.0" encoding="UTF-8"?>
<install version="1.5" type="fabrikplugin" group="validationrule" method="upgrade">
	<name>Is IBAN</name>
	<author>Hugh Messenger</author>
	<creationDate>July 2011</creationDate>
	<copyright>(C) 2005-2011 fabrikar.com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>hugh.messenger@gmail.com</authorEmail>
	<authorUrl>www.fabrikar.com</authorUrl>
	<version>2.0.4</version>
	<description>Validate as valid IBAN (SWIFT) bank account code</description>
	<files>
		<filename fabrikplugin="isiban">isiban.php</filename>
		<filename>index.html</filename>
	</files>
	<params repeat="1" repeatcontrols="0">
		<param type="text" name="isiban-message" size="30" label="Error message" value="" description="VALIDATIONERRORDESC" />
		<param type="textarea" cols="30" rows="5" name="isiban-validation_condition" label="Condition" description="VALIDATIONCONDITIONDESC"/>
                <param name="isiban-allow_empty" type="radio" default="0" label="VALIDATIONALLOWEMPTY" description="VALIDATIONALLOWEMPTYDESC">
                        <option value="0">No</option>
                        <option value="1">Yes</option>
                </param>
	</params>
</install>
