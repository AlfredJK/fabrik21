<?xml version="1.0" encoding="UTF-8"?>
<install version="1.5" type="fabrikplugin" group="validationrule" method="upgrade">
	<name>Es numero</name>
	<author>GEROS</author>
	<creationDate>May 2011</creationDate>
	<copyright>GEROS</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<version>2.0.4</version>
	<description>Test to ensure the data entered is numeric in Spanish format</description>
	<files>
		<filename fabrikplugin="esnumero">esnumero.php</filename>
		<filename>index.html</filename>
	</files>
	<params repeat="1" repeatcontrols="0">
		<param type="text" name="esnumero-message" size="30" label="Error message" value="" description="VALIDATIONERRORDESC" />
		<param type="textarea" cols="30" rows="5" name="esnumero-validation_condition" label="Condition" description="VALIDATIONCONDITIONDESC"/>
		<param name="esnumero-allow_empty" type="radio" default="0" label="VALIDATIONALLOWEMPTY" description="VALIDATIONALLOWEMPTYDESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>